<%- include header %>

    <!-- 登录 -->
    <form class="form-signin form-login" role="form" action="/login" method="POST">
        <h2 class="form-signin-heading">请登录</h2>
        <input type="text" class="form-control" id="username" name = "username" placeholder="请输入账号" required autofocus autocomplete="off">
        <input type="password" class="form-control" id="password" name = "password" placeholder="请输入密码" required autocomplete="off">
        <input class="btn btn-lg btn-primary btn-block" type="submit" id="btn" value="提交"/>
        <div class="alert alert-danger alert-dismissible fade in login-info hidden" role="alert">
        </div>
    </form>

<%- include footer %>